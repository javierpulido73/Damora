<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="96"
        android:background="@drawable/background_agregar_tarjeta"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_h2"
            >
            <EditText
                android:id="@+id/tv_numero_tarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÃºmero de tarjeta"
                android:textSize="@dimen/text_h5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_h2"
                android:weightSum="100">

                <EditText
                    android:id="@+id/tv_mes"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:hint="MM/AA"
                    android:textSize="@dimen/text_h5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"/>
                <EditText
                    android:id="@+id/tv_cvv"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:hint="CVV"
                    android:textSize="@dimen/text_h5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/boton_cancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_margin="@dimen/margin_h2"
                    android:background="@drawable/draw_boton_login"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_h5"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/boton_agregar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_margin="@dimen/margin_h2"
                    android:background="@drawable/draw_boton_login"
                    android:text="Agregar"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_h5"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </LinearLayout>







    </LinearLayout>

</LinearLayout>
