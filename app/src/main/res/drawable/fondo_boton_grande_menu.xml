<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/gris_1" />
            <stroke
                android:width="@dimen/margin_h6"
                android:color="@color/gris_1" />
            <corners
                android:topRightRadius="@dimen/margin_h3"
                android:topLeftRadius="@dimen/margin_h3"
                android:bottomLeftRadius="@dimen/margin_h3"
                android:bottomRightRadius="@dimen/margin_h3"
                />
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape>
            <solid
                android:color="@color/gris_3" />
            <stroke
                android:width="@dimen/margin_h6"
                android:color="@color/gris_3" />
            <corners
                android:topRightRadius="@dimen/margin_h3"
                android:topLeftRadius="@dimen/margin_h3"
                android:bottomLeftRadius="@dimen/margin_h3"
                android:bottomRightRadius="@dimen/margin_h3"
                />
        </shape>
    </item>
</selector>