<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:left="3dp" android:top="3dp" android:right="3dp"
                        android:bottom="3dp"/>
                    <gradient android:startColor="#00c4c7a9" android:endColor="#00d6dadf"
                        android:angle="270"/>
                    <stroke android:width="1px" android:color="#17a2b8"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/dropdown_blue1"/>
            </item>
        </layer-list>
    </item>
</selector>